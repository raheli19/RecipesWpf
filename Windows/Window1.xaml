<Window x:Class="Recipes.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipes.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="400">
    <Grid>
        <DataGrid x:Name = "CommentGrid"  Visibility = "Visible" Margin = "10,10,31.6,10.4" Opacity = "0.8" >
            <TextBlock x:Name="commentBlock" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="79" Width="285" Text="{Binding Comment, Mode=TwoWay}" />
            <Button Content = "update" HorizontalAlignment = "Left" Margin = "265,141,0,0" VerticalAlignment = "Top" Width = "84" Height = "24" FontSize = "14" Click = "enter_comment_click"/>
        </DataGrid >
        <Label x:Name = "comment" Visibility = "Visible" Background = "Gray" Opacity = "0.50" Foreground = "AntiqueWhite" FontSize = "20" FontFamily = "Arial " FontWeight = "Bold" Content = "Enter your comment here:"  HorizontalAlignment = "Left" Margin = "10,10,0,0" VerticalAlignment = "Top" Height = "35" Width = "303" />


    </Grid>
</Window>
